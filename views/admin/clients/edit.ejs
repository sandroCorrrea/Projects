<%-include('../../../partials/head.ejs')%>
    <link rel="stylesheet" type="text/css" href="/css/styleAdmin.css">
    <%- include('../../../partials/head2.ejs') %>

        <body>
            <%- include('../../../partials/navAdmin.ejs') %>
                <div class="container">
                    <hr>
                    <h2 class="display-5" style="text-align: center;">Editar dados do Cliente üßë‚Äçüíº</h2>
                    <hr>
                    <div class="card mb-5">
                        <div class="card-body">
                            <form method="POST" action="/admin/clients/update">
                                <label>Selecione a categoria</label>
                                <select class="form-select" name="categoryId">
                        <% categories.forEach(category => { %>
                            <% if (category.id == clients.categoryId ) {%>
                                <option value="<%=category.id%>" selected><%=category.title%></option>
                            <%}else { %>
                                <option value="<%=category.id%>"><%=category.title%></option>
                            <% }%>
                        <% }); %>
                    </select>
                                <div class="form-floating mt-3">
                                    <input type="text" class="form-control" name="name" placeholder=" " value="<%= clients.name %> ">
                                    <label>Nome do Cliente</label>
                                </div>
                                <div class="form-floating mt-3">
                                    <input type="text" name="cpf" class="form-control" placeholder=" " value="<%= clients.cpf%> ">
                                    <label>CPF/CNPJ</label>
                                </div>
                                <div class="form-floating mt-3">
                                    <input type="date" name="dathBirth" class="form-control" placeholder=" " value="<%= clients.dathBirth%>">
                                    <label>Data Nascimento</label>
                                </div>
                                <div class="form-floating mt-3">
                                    <input type="text" name="phone" class="form-control" placeholder=" " value="<%= clients.phone%>">
                                    <label>Telefone</label>
                                </div>
                                <div class="form-floating mt-3">
                                    <input type="text" name="address" class="form-control" placeholder=" " value="<%= clients.address%>">
                                    <label>Endere√ßo</label>
                                </div>
                                <label style="margin-top: 2vh;">Selecione o respons√°vel</label>
                                <select class="form-select" name="adminId">
                        <% admins.forEach(admin => { %>
                            <% if (admin.id == clients.adminId) { %>
                                <option value="<%= admin.id %>" selected><%= admin.name %> </option>
                            <%}else{%>
                                <option value="<%= admin.id %>"><%= admin.name %> </option>
                            <%}%>
                        <% }); %> 
                    </select>
                                <input type="hidden" name="id" value="<%= clients.id%>">
                                <div class="form-floating mt-3">
                                    <input type="email" name="email" class="form-control" placeholder=" " value="<%= clients.email%>">
                                    <label>Email</label>
                                </div>
                                <div class="form-floating mt-3">
                                    <input type="password" name="password" class="form-control" placeholder=" " value="<%= clients.password%>">
                                    <label>Senha</label>
                                </div>
                                <div class="d-grid">
                                    <br><button class="btn btn-warning">Atualizar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
        </body>
        <%- include('../../../partials/footer.ejs') %>