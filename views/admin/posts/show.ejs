<%- include('../../../partials/head.ejs') %> 
    <link rel="stylesheet" type="text/css" href="/css/styleAdmin.css">
<%- include('../../../partials/head2.ejs') %> 
<body>
    <%- include('../../../partials/navAdmin.ejs') %> 
    <div class="container">
        <hr>
        <img src="/img/logo.png" class="logo">
        <h2 class="display-5">Lista de postagens</h2>
        <a class="btn btn-primary" href="/admin/post/new">Novo Post</a>
        <hr>
        <table class="table table-dark mt-3">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Título</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% post.forEach(posts => { %>
                    <tr>
                        <th><%=posts.id%></th>
                        <th><%=posts.title%></th>
                        <th>
                            <form method="POST" action="/admin/post/delete" style="display: inline;" onsubmit="confirmDelete(event)">
                                <button class="btn btn-danger" name="id" value="<%=posts.id%>">Excluir</button>
                            </form>
                            <a class="btn btn-warning" href="/admin/post/edit/<%=posts.id%>">Editar</a>
                        </th>
                    </tr>
                <% }); %> 
            </tbody>
        </table>
    </div>
</body>
<%- include('../../../partials/footer.ejs') %> 
